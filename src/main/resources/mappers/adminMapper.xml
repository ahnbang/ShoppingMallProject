<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace ="com.terzobang.admin.dao.AdminDAO">
 
 
 	<insert id ="insertItem" parameterType="com.terzobang.product.model.Item" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `item`
		(
			`name`
			, `price`
			, `content`
			, `size`
			, `stock`
			, `category`
			, `sex`
		)
		VALUES
		(
			  #{name}
			, #{price}
			, #{content}
			, #{size}
			, #{stock}
			, #{category}
			, #{sex}
		)
 	</insert>
 	
 	<insert id="insertImage" parameterType="map">
                
        INSERT INTO `image`
        ( 	
        	`itemId`
        	,`savename`

         )
        VALUES
        
        <foreach collection="imagePathList" item="item" separator=",">
            (
            ${itemId}, #{item}
            )
        </foreach>
    </insert>
 	

 
 </mapper>